<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<GridPane fx:controller="login.LoginPageController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root">
    <padding>
        <Insets top="10" right="25" left="25" bottom="10"/>
    </padding>

    <HBox alignment="CENTER_RIGHT" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Label id="welcome-text" text="Simple Chat"/>
    </HBox>
    <Label text="Enter your username:" id="username"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <HBox alignment="CENTER_LEFT" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <TextField fx:id="username"/>
    </HBox>



    <Label text="Enter address:" id="username"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <HBox alignment="CENTER_LEFT" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <TextField fx:id="address"/>
    </HBox>




    <Label text="Enter port:" id="username"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <HBox alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <TextField fx:id="port"/>
    </HBox>







    <HBox alignment="BOTTOM_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button fx:id="loginButton" id="login-button" text="Start" onMouseClicked="#handleButtonClick"/>
    </HBox>

    <stylesheets>
        <URL value="@login.css"/>
    </stylesheets>

</GridPane>